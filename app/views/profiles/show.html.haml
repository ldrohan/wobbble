%div.profile
	= image_tag @user.avatar.url(:thumb), :class => "avatar" 

	%h1 #{@user.name}
	%h2 Developer Extraordinaire
	%hr

	#posts
		- @posts.each do |post|
			.post
				.post_image
					= link_to (image_tag post.image.url(:small)), post
				.post_content	
					.title
						%h2= link_to post.title, post
						.data.clearfix
							%p.buttons
								%span
									%i.fa.fa-comments-o
									= post.comments.count
								%span
									%i.fa.fa-thumbs-o-up
									= post.get_likes.size

